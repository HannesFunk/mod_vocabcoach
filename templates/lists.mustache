
<h3>Vokabellisten</h3>

<div class="btn btn-secondary btn-close m-2"
     data-action="mod_vocabcoach/close_page">X</div>
<div class="clearfix"></div>

<table id="table-list" class="table generaltable">


<tbody>
<tr data-list-id="{{id}}">
    <th>Name</th>
    <th>Jgst.</th>
    <th>Buch</th>
    <th>Kapitel</th>
    <th>Anzahl Vokabeln</th>
    <th>Ersteller:in</th>
    <th>Aktionen</th>
</tr>
{{#emptyList}}
    <td colspan="7" class="text-center">
        <span>Keine Vokabelliste gefunden.</span>
    </td>
{{/emptyList}}
{{#lists}}
<tr data-list-id="{{id}}">
    <td>{{title}}</td>
    <td>{{year}}</td>
    <td>{{book}}</td>
    <td>{{unit}}</td>
    <td>{{number}}</td>
    <td>{{creator}}</td>
    <td>
    <div class="dropdown">
        <a href="#" class="btn btn-link btn-icon colour-inherit text-decoration-none d-flex align-items-center justify-content-center" role="button" data-toggle="dropdown" data-boundary="window" aria-haspopup="true" tabindex="0" aria-controls="list-{{id}}-menu" aria-label="Aktionen anzeigen" aria-expanded="false">
            <i class="fa fa-ellipsis-v text-dark  py-2" aria-hidden="true"></i>
        </a>
        <div
            class="dropdown-menu dropdown-menu-right"
            aria-labelledby="list-{{id}}-menu"
            data-rel="menu-content"
            role="menu"
            id="list-{{id}}-menu"
        >
            <a
                class="dropdown-item menu-action"
                role="menuitem"
                tabindex="-1"
                data-targetstate="0"
                title="Abfrage"
                href="#"
                data-list-id="{{id}}"
                data-action="mod_vocabcoach/check_list"
            >
                <i class="fa fa-question-circle-o text-dark  pr-2" aria-hidden="true"></i>
                <span class="menu-action-text">Abfrage</span>
            </a>
            <a
                class="dropdown-item menu-action"
                role="menuitem"
                tabindex="-1"
                data-targetstate="0"
                title="In meinen Kasten übernehmen"
                href="#"
                data-list-id="{{id}}"
                data-action="mod_vocabcoach/add_list_to_user"
            >
                <i class="fa fa-save text-dark  pr-2" aria-hidden="true"></i>
                <span class="menu-action-text">In meinen Kasten übernehmen</span>
            </a>
            <a
                class="dropdown-item menu-action"
                role="menuitem"
                tabindex="-1"
                data-targetstate="0"
                title="Als PDF exportieren"
                href="#"
                data-list-id="{{id}}"
                data-action="mod_vocabcoach/show_pdf"
            >
                <i class="fa fa-copy text-dark  pr-2" aria-hidden="true"></i>
                <span class="menu-action-text">Als PDF exportieren</span>
            </a>
            {{#editable}}
            <a
                class="dropdown-item menu-action"
                role="menuitem"
                tabindex="-1"
                data-targetstate="0"
                title="Bearbeiten"
                href="#"
                data-list-id="{{id}}"
                data-action="mod_vocabcoach/edit_list"
            >
                <i class="fa fa-edit text-dark  pr-2" aria-hidden="true"></i>
                <span class="menu-action-text">Bearbeiten</span>
            </a>
            <a
                class="dropdown-item menu-action"
                role="menuitem"
                tabindex="-1"
                data-targetstate="0"
                title="Löschen"
                href="#"
                data-list-id="{{id}}"
                data-action="mod_vocabcoach/delete_list"
            >
                <i class="fa fa-trash-o text-dark  pr-2" aria-hidden="true"></i>
                <span class="menu-action-text">Löschen</span>
            </a>
            {{/editable}}
        </div>

    </div>
    </td>
</tr>
{{/lists}}
</tbody>

</table>
{{#loading}}
<div class="spinner-container">
    <div class="spinner"></div>
</div>
{{/loading}}