{{!
    @template mod_vocabcoach/mobile_main

    Mobile main view template for VocabCoach module.

    Context variables required for this template:
    * boxdata - Array of box information with stage, due, total, inactive, next_due
    * cmid - Course module ID
    * userid - User ID
    * days_logged_in - Number of consecutive days logged in
    * days_checked_all - Number of consecutive days all vocab checked
    * modulename - Name of the module instance
}}

<pre>
{{{debug-info}}}
</pre>


<div class="mod-vocabcoach-mobile">
    <div class="mobile-header">
        <h3>{{modulename}}</h3>
        <div class="streak-info">
            <div class="streak-item">
                <span class="streak-label">{{#str}}days_logged_in, mod_vocabcoach{{/str}}:</span>
                <span class="streak-value">{{days_logged_in}}</span>
            </div>
            <div class="streak-item">
                <span class="streak-label">{{#str}}days_checked_all, mod_vocabcoach{{/str}}:</span>
                <span class="streak-value">{{days_checked_all}}</span>
            </div>
        </div>
    </div>

    <div class="mobile-boxes-container">
        <h4>{{#str}}vocabcoachsettings, mod_vocabcoach{{/str}}</h4>
        
        {{#boxdata}}
        <div class="mobile-box {{#inactive}}mobile-box-inactive{{/inactive}}" 
             data-stage="{{stage}}" 
             data-due="{{due}}" 
             data-total="{{total}}"
             {{^inactive}}onclick="mobileStartCheck({{cmid}}, {{stage}})"{{/inactive}}>
            
            <div class="mobile-box-header">
                <span class="mobile-box-title">{{#str}}box, mod_vocabcoach{{/str}} {{stage}}</span>
                {{^inactive}}
                <span class="mobile-box-arrow">→</span>
                {{/inactive}}
            </div>
            
            <div class="mobile-box-content">
                <div class="mobile-box-stats">
                    <div class="mobile-stat">
                        <span class="mobile-stat-value {{#inactive}}inactive{{/inactive}}">{{due}}</span>
                        <span class="mobile-stat-label">{{#str}}due, mod_vocabcoach{{/str}}</span>
                    </div>
                    <div class="mobile-stat-divider">/</div>
                    <div class="mobile-stat">
                        <span class="mobile-stat-value">{{total}}</span>
                        <span class="mobile-stat-label">{{#str}}total, mod_vocabcoach{{/str}}</span>
                    </div>
                </div>
                
                {{#inactive}}
                <div class="mobile-next-due">
                    {{#str}}next_due, mod_vocabcoach{{/str}}: {{next_due}}
                </div>
                {{/inactive}}
                
                {{^inactive}}
                <div class="mobile-check-button">
                    <span>{{#str}}start_check, mod_vocabcoach{{/str}}</span>
                </div>
                {{/inactive}}
            </div>
        </div>
        {{/boxdata}}
        
        {{^boxdata}}
        <div class="mobile-no-boxes">
            <p>{{#str}}no_vocab_available, mod_vocabcoach{{/str}}</p>
        </div>
        {{/boxdata}}
    </div>

    {{#hasVocab}}
    <div class="mobile-check-container">
        <div id="mobile-check-area" class="mobile-check-area">
            <!-- Progress dots -->
            <div id="mobile-progress-dots" class="mobile-progress-dots">
                <!-- Dots will be generated by JavaScript -->
            </div>

            <!-- Vocabulary card -->
            <div class="mobile-vocab-card">
                <div id="mobile-vocab-front" class="mobile-vocab-side mobile-vocab-front">
                    <!-- Front side content will be populated by JavaScript -->
                </div>
                
                <div id="mobile-vocab-back" class="mobile-vocab-side mobile-vocab-back" style="display: none;">
                    <!-- Back side content will be populated by JavaScript -->
                </div>
            </div>

            <!-- Check mode selector -->
            <div class="mobile-mode-selector">
                <select id="mobile-check-mode" class="mobile-select">
                    <option value="buttons">{{#str}}check_mode_buttons, mod_vocabcoach{{/str}}</option>
                    <option value="type">{{#str}}check_mode_type, mod_vocabcoach{{/str}}</option>
                </select>
            </div>

            <!-- Input area for typing mode -->
            <div id="mobile-type-area" class="mobile-type-area" style="display: none;">
                <input type="text" id="mobile-vocab-input" class="mobile-vocab-input" placeholder="{{#str}}type_answer, mod_vocabcoach{{/str}}">
                <button id="mobile-check-answer" class="mobile-btn mobile-btn-primary">{{#str}}check_answer, mod_vocabcoach{{/str}}</button>
            </div>

            <!-- Action buttons -->
            <div id="mobile-check-buttons" class="mobile-check-buttons">
                <button id="mobile-show-back" class="mobile-btn mobile-btn-primary mobile-btn-large">
                    {{#str}}show_answer, mod_vocabcoach{{/str}}
                </button>
                
                <div id="mobile-result-buttons" class="mobile-result-buttons" style="display: none;">
                    <button id="mobile-btn-known" class="mobile-btn mobile-btn-success mobile-btn-large">
                        ✓ {{#str}}known, mod_vocabcoach{{/str}}
                    </button>
                    <button id="mobile-btn-unknown" class="mobile-btn mobile-btn-danger mobile-btn-large">
                        ✗ {{#str}}unknown, mod_vocabcoach{{/str}}
                    </button>
                </div>
            </div>

            <!-- Summary area -->
            <div id="mobile-check-summary" class="mobile-check-summary" style="display: none;">
                <h4>{{#str}}check_complete, mod_vocabcoach{{/str}}</h4>
                <div class="mobile-summary-stats">
                    <div class="mobile-summary-stat mobile-summary-correct">
                        <span class="mobile-summary-value" id="mobile-known-count">0</span>
                        <span class="mobile-summary-label">{{#str}}known, mod_vocabcoach{{/str}}</span>
                    </div>
                    <div class="mobile-summary-stat mobile-summary-incorrect">
                        <span class="mobile-summary-value" id="mobile-unknown-count">0</span>
                        <span class="mobile-summary-label">{{#str}}unknown, mod_vocabcoach{{/str}}</span>
                    </div>
                </div>
                
                <div class="mobile-summary-actions">
                    <button id="mobile-finish-check" class="mobile-btn mobile-btn-primary mobile-btn-large">
                        {{#str}}finish_check, mod_vocabcoach{{/str}}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/hasVocab}}

    {{^hasVocab}}
    <div class="mobile-no-vocab" id="mobile-check-area">
        <h3>{{#str}}box, mod_vocabcoach{{/str}} {{stage}}</h3>
        <div class="mobile-no-vocab-content">
            <p>{{#str}}no_vocab_due, mod_vocabcoach{{/str}}</p>
            <button onclick="mobileGoBack()" class="mobile-btn mobile-btn-primary">
                {{#str}}back_to_boxes, mod_vocabcoach{{/str}}
            </button>
        </div>
    </div>
    {{/hasVocab}}
</div>

