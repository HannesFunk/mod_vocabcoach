<div class="d-flex align-items-center ml-auto">
    <div class="dropdown show">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="settingsDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{#str}} settings, mod_vocabcoach {{/str}}
        </button>
        <div class="dropdown-menu dropdown-menu-right p-3" aria-labelledby="settingsDropdown" style="min-width: 250px;">
            <div class="mb-3">
               {{> mod_vocabcoach/checkmode_select }}
            </div>
            {{#courseNotificationsEnabled}}
            <hr class="my-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="email-notifications" {{#userNotificationsEnabled}}checked{{/userNotificationsEnabled}}>
                <label class="form-check-label" for="email-notifications">
                    {{#str}} email_notifications, mod_vocabcoach {{/str}}
                </label>
            </div>
            {{/courseNotificationsEnabled}}
        </div>
    </div>
</div>