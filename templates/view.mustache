{{!
    @template mod_vocabcoach/boxes


    Example context (json):
    {

    }
}}


<h4 class="mt-5">{{#str}}view_actions, mod_vocabcoach{{/str}}</h4>
<hr>
{{> mod_vocabcoach/view_actions}}


<h4 class="mt-5">{{#str}}view_your_vocab_box, mod_vocabcoach{{/str}}</h4>
<hr>
<div id="vocabcoach-box-container">

    {{#boxdata}}
    <div
        class="box {{#inactive}}box-faded{{/inactive}}"
        data-due="{{due}}"
        data-total="{{total}}"
        data-stage="{{stage}}"
        data-action="mod_vocabcoach/check_box"
        data-next-due="{{next_due}}"
    >
        <div class="box-top-line">
            <div class="box-title mr-2">{{#str}}view_box_title, mod_vocabcoach, {{stage}}{{/str}}</div>
            <div class="dropdown">
                <a href="#" class="btn btn-link btn-icon colour-inherit text-decoration-none d-flex align-items-center justify-content-center" role="button" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" tabindex="0" aria-controls="box-{{stage}}-menu" aria-label="{{#str}}view_show_actions, mod_vocabcoach{{/str}}" aria-expanded="false">
                    <i class="fa fa-ellipsis-v text-dark  py-2" aria-hidden="true"></i>
                </a>
                <div
                        class="dropdown-menu dropdown-menu-right"
                        aria-labelledby="box-{{stage}}-menu"
                        data-rel="menu-content"
                        role="menu"
                        id="box-{{stage}}-menu">
                    <a
                            class="dropdown-item menu-action {{^inactive}} disabled{{/inactive}}"
                            role="menuitem"
                            tabindex="-1"
                            data-targetstate="0"
                            title="{{#str}}view_check_undue, mod_vocabcoach{{/str}}"
                            href="#"
                            data-action="mod_vocabcoach/force_check_all"
                    >
                        <i class="fa fa-question-circle-o text-dark  pr-2" aria-hidden="true"></i>
                        <span class="menu-action-text">{{#str}}view_check_undue, mod_vocabcoach{{/str}}</span>
                    </a>
                    <a
                            class="dropdown-item menu-action"
                            role="menuitem"
                            tabindex="-1"
                            data-targetstate="0"
                            data-stage="{{stage}}"
                            title="{{#str}}view_remove_incorrect, mod_vocabcoach{{/str}}"
                            href="#"
                            data-action="mod_vocabcoach/view_box"
                    >
                        <i class="fa fa-edit text-dark  pr-2" aria-hidden="true"></i>
                        <span class="menu-action-text">{{#str}}view_remove_incorrect, mod_vocabcoach{{/str}}</span>
                    </a>
                    <a
                            class="dropdown-item menu-action"
                            role="menuitem"
                            tabindex="-1"
                            data-targetstate="0"
                            data-stage="{{stage}}"
                            title="{{#str}}view_export_pdf, mod_vocabcoach{{/str}}"
                            href="#"
                            data-action="mod_vocabcoach/show_pdf_user"
                    >
                        <i class="fa fa-copy text-dark  pr-2" aria-hidden="true"></i>
                        <span class="menu-action-text">{{#str}}view_export_pdf, mod_vocabcoach{{/str}}</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="box-bottom-line">
            <span class="box-numbers">{{due}} / {{total}}</span>
        </div>
    </div>
    {{/boxdata}}

</div>

<div class="clearfix"></div>

<h4 class="mt-5">{{#str}}view_activity, mod_vocabcoach{{/str}}</h4>
<hr>
<div class="activity-report">
    <span class="streak">{{#str}}view_logged_in_streak, mod_vocabcoach, {{days_logged_in}}{{/str}}</span>
    <span class="streak">{{#str}}view_checked_all_streak, mod_vocabcoach, {{days_checked_all}}{{/str}}</span>
</div>


